{
    "$schema": "https://raw.githubusercontent.com/FLECS-Technologies/app-sdk/3.0.0/manifest.schema.json",
    "_schemaVersion": "3.0.0",
    "app": "com.herborner-pumpen.hp.mqtt-bridge",
    "version": "##VERSION##",
    "revision": "0",
    "image": "flecs.azurecr.io/com.herborner-pumpen.hp.mqtt-bridge",
    "multiInstance": false,
    "editors": [{  "name": "MQTT Status Viewer",  "port": 9331,  "supportsReverseProxy": true}],
    "capabilities": [ 
        "NET_ADMIN" 
    ],
    "ports":[
        "9331:9330"
    ],
    "devices": [ 
        "/dev/net/tun" 
    ],
    "env":[
        "LOGLEVEL=notice",
        "FLECS_API_ADDRESS=172.21.0.1:8081"
    ],
    "volumes":[
        "data:/app/data"
    ]
}
